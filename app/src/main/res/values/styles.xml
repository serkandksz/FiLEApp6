    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#00ce7c</item>
        <item name="colorPrimaryDark">#00ce7c</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="TabLayout.Theme" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorLoginButton</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="textAllCaps">false</item>
        <item name="tabSelectedTextColor">@color/colorWhite</item>
        <item name="tabBackground">@color/colorLoginBackg</item>
    </style>





</resources>